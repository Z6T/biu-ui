{
  "name": "nature-ui",
  "version": "1.0.0",
  "author": "zhangtao",
  "description": "基于vue的一套极简,酷炫,高质量的UI组件库",
  "main": "lib/nature-ui.umd.min.js",
  "keywords": [
    "nature-ui",
    "vue-ui",
    "vue"
  ],
  "private": false,
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "commit": "git-cz",
    "lib": "vue-cli-service build --target lib --dest lib packages/index.js",
    "lib-css": "npx gulp css --gulpfile ./packages/nt-styles/gulpfile.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "highlight.js": "^9.15.8",
    "markdown-it": "^9.0.1",
    "markdown-it-container": "^2.0.0",
    "nature-ui": "^0.3.4",
    "typescript": "^3.5.3",
    "vue": "^2.6.10",
    "vue-markdown-loader": "^2.4.1",
    "vue-router": "^3.0.7"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-cssmin": "^0.2.0",
    "gulp-rename": "^1.4.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "node-sass": "^4.12.0",
    "postcss-salad": "^2.0.1",
    "precss": "^4.0.0",
    "sass-loader": "^7.1.0",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.10",
    "webpack-merge": "^4.2.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-salad": {
        "browsers": [
          "ie > 8",
          "last 2 versions"
        ],
        "features": {
          "bem": {
            "shortcuts": {
              "component": "b",
              "descendent": "e",
              "modifier": "m"
            },
            "separators": {
              "descendent": "__",
              "modifier": "_"
            }
          }
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
